<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:viewmodels="clr-namespace:LinksOrganizer.ViewModels"
    x:Class="LinksOrganizer.Views.LinkItemView" 
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout Margin="20" VerticalOptions="StartAndExpand" BackgroundColor="{DynamicResource PrimaryColor}">
        <Label Text="Title" Style="{StaticResource SmallLabelStyle}" />
        <Entry Text="{Binding Name}" Style="{StaticResource SmallLabelStyle}" />
        <Label Text="Info" Style="{StaticResource SmallLabelStyle}" />
        <Entry Text="{Binding Info}" Style="{StaticResource SmallLabelStyle}" />
        <Label Text="Link" Style="{StaticResource SmallLabelStyle}" />
        <Entry Text="{Binding Link}" Style="{StaticResource SmallLabelStyle}" />
        <Button Text="Copy" Command="{Binding CopyLinkItemCommand}" />
        <Button Text="Open" Command="{Binding OpenLinkItemCommand}" />
        <Button Text="Save" Command="{Binding SaveLinkItemCommand}" IsEnabled="{Binding CanSave}"  />
        <Button Text="Cancel" Command="{Binding CancelLinkItemCommand}"/>
        <Button Text="Delete" Command="{Binding DeleteLinkItemCommand}"/>
    </StackLayout>
</ContentPage>