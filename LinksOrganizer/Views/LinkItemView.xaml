<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:resources="clr-namespace:LinksOrganizer.Resx" xmlns:customcontrols="clr-namespace:LinksOrganizer.CustomControls"
    x:Class="LinksOrganizer.Views.LinkItemView" 
    BackgroundColor="#FFFFFF">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Options" Order="Primary" Text="..." Priority="1" Command="{Binding OptionsCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout 
            Orientation="Vertical"
            HorizontalOptions="Start"
            >
                <Label                                              
                        Text="Manage" 
                        TextColor="#8698A8"
                        Margin="13, 5, 10, 0"
                        FontFamily="Poppins-Regular">
                </Label>
                <Grid  Margin="10, 0, 10, 0"  >

                    <StackLayout Orientation="Horizontal">
                        <Button 
                            Text="Copy" 
                            VerticalOptions="Center" 
                            CornerRadius="9" 
                            BorderColor="#8698A8" 
                            BackgroundColor="#07122A"
                            TextColor="#FFFFFF"
                            BorderWidth="1"
                            Margin="6, 16, 0, 14"
                            Command="{Binding CopyLinkItemCommand}">
                        </Button>
                        <Button 
                            Text="Open" 
                            VerticalOptions="Center" 
                            CornerRadius="9" 
                            BorderColor="#8698A8" 
                            BackgroundColor="#07122A"
                            TextColor="#FFFFFF"
                            BorderWidth="1"
                            Margin="3, 16, 0, 14"
                            Command="{Binding OpenLinkItemCommand}">
                        </Button>
                        <Button 
                            Text="Save" 
                            VerticalOptions="Center" 
                            CornerRadius="9" 
                            BorderColor="#8698A8" 
                            IsEnabled="{Binding CanSave}"
                            BackgroundColor="#07122A"
                            TextColor="#FFFFFF"
                            BorderWidth="1"
                            Margin="3, 16, 0, 14"
                            Command="{Binding SaveLinkItemCommand}">
                        </Button>
                        <Button 
                            Text="Delete" 
                            VerticalOptions="Center" 
                            CornerRadius="9" 
                            BorderColor="#8698A8" 
                            IsEnabled="{Binding CanDelete}"
                            BackgroundColor="#07122A"
                            TextColor="#FFFFFF"
                            BorderWidth="1"
                            Margin="3, 16, 0, 14"
                            Command="{Binding DeleteLinkItemCommand}">
                        </Button>
                </StackLayout>
                    <customcontrols:RoundedBoxView                                                      
                                    BorderColor="#8698A8"
                                    CornerRadius="5"
                                    BorderThickness="1"
                                    BackgroundColor="Transparent">
                    </customcontrols:RoundedBoxView>
                </Grid>
            
                <Label                                              
                        Text="{x:Static resources:AppResources.TitleLabel}" 
                        TextColor="#8698A8"
                        Margin="13, 0, 10, 0"
                        FontFamily="Poppins-Regular">
                </Label>
                <Grid  Margin="10, 0, 10, 0" MinimumHeightRequest="45" >
                    <customcontrols:CustomEntry
                                FontFamily="Poppins-Italic"
                                Placeholder="Enter link title"
                                Margin="6, 0, 0, 0"
                        Text="{Binding Name}">

                
                    </customcontrols:CustomEntry>

                    <customcontrols:RoundedBoxView                                                      
                                    BorderColor="#8698A8"
                                    CornerRadius="5"
                                    BorderThickness="1"
                                    BackgroundColor="Transparent">
                    </customcontrols:RoundedBoxView>
                </Grid>

                <Label                                              
                            Text="{x:Static resources:AppResources.InfoLabel}" 
                            TextColor="#8698A8"
                            Margin="13, 5, 10, 0"
                            FontFamily="Poppins-Regular">
                </Label>
                <Grid  Margin="10, 0, 10, 0" MinimumHeightRequest="45" >
                    <customcontrols:CustomEntry
                                            FontFamily="Poppins-Italic"
                                            Placeholder="Enter link info"
                                            Margin="6, 0, 0, 0"
                                    Text="{Binding Info}">
                    </customcontrols:CustomEntry>

                    <customcontrols:RoundedBoxView                                                      
                                            BorderColor="#8698A8"
                                            CornerRadius="5"
                                            BorderThickness="1"
                                            BackgroundColor="Transparent">
                    </customcontrols:RoundedBoxView>
                </Grid>

                <Label                                              
                            Text="{x:Static resources:AppResources.LinkLabel}" 
                            TextColor="#8698A8"
                            Margin="13, 5, 10, 0"
                            FontFamily="Poppins-Regular">
                </Label>
            <Grid  Margin="10, 0, 10, 0" MinimumHeightRequest="45" >
                <customcontrols:CustomEntry
                                            FontFamily="Poppins-Italic"
                                            Placeholder="Enter link info"
                                            Margin="6, 0, 0, 0"
                                    Text="{Binding Link}">
                </customcontrols:CustomEntry>

                <customcontrols:RoundedBoxView                                                      
                                            BorderColor="#8698A8"
                                            CornerRadius="5"
                                            BorderThickness="1"
                                            BackgroundColor="Transparent">
                </customcontrols:RoundedBoxView>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>